<Window x:Class="Noise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noise"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200">
    <Grid>
        <Button x:Name="generateButton" Content="Generate" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="generateButton_Click"/>
        <TextBox x:Name="seedTextBox" HorizontalAlignment="Left" Height="23" Margin="10,35,0,0" TextWrapping="Wrap" Text="1234567" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="labelMs" Content="Ms" HorizontalAlignment="Left" Margin="10,834,0,0" VerticalAlignment="Top" Width="43"/>
        <Image x:Name="noiseImage" Margin="98,10,10,10" />
        <TextBox x:Name="powOf2TextBox" HorizontalAlignment="Left" Height="23" Margin="10,63,0,0" TextWrapping="Wrap" Text="7" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="sizeLabel" Content="Size" HorizontalAlignment="Left" Margin="10,296,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
